{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ES6"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
